<div class="container mt-4">
  <h1>My Tickets</h1>

  <% if @tickets.any? %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Ticket Number</th>
          <th>Event Name</th>
          <th>Date</th>
          <th>Category</th>
          <th>Price</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @tickets.each do |ticket| %>
          <tr>
            <td><%= ticket.ticket_number %></td>
            <td><%= ticket.event.name %></td>
            <td><%= ticket.event.date.strftime("%d %B %Y") %></td>
            <td><%= ticket.ticket_category.titleize %></td>
            <td>$<%= ticket.price %></td>
            <td>
              <%= button_to "Resell", sell_ticket_path(ticket), method: :patch, data: { confirm: "Are you sure you want to resell this ticket?" }, class: "btn btn-primary btn-sm" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>You have no tickets purchased.</p>
  <% end %>
</div>