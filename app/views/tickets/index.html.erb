<div class="container mt-4">
  <h1>Tickets for <%= @event.name %></h1>
  <p>Date: <%= @event.date.strftime("%B %d, %Y") %></p>
  <p>Location: <%= @event.location %></p>
  <p>Capacity: <%= @event.capacity %></p>

  <%= link_to "Create New Ticket", new_ticket_path(event_id: @event.id), class: "btn btn-success my-3" %>

  <hr>

  <h2>Available Tickets</h2>
  <div class="container">
    <div class="row justify-content-between">
      <div class="col-6">
        <% if @tickets.any? %>
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Ticket Number</th>
                <th>Category</th>
                <th>Price</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @tickets.each do |ticket| %>
                <tr>
                  <td><%= ticket.ticket_number %></td>
                  <td><%= ticket.ticket_category.titleize %></td>
                  <td>$<%= ticket.price %></td>
                  <td>
                    <%= button_to "Add to cart", pending_ticket_path(ticket), method: :patch, class: "btn btn-primary" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <% else %>
          <p>No tickets available for this event.</p>
        <% end %>
      </div>
      <div class="col-6">
        <div class="ml-5 " style="width: 100%; height: 400px;"
          data-controller="map"
          data-map-markers-value="<%= @markers.to_json %>"
          data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      </div>
    </div>


  </div>
</div>
