<div class="container mt-4">
  <h1>Tickets for <%= @event.name %></h1>
  <p>Date: <%= @event.date.strftime("%B %d, %Y") %></p>
  <p>Location: <%= @event.location %></p>
  <p>Capacity: <%= @event.capacity %></p>

  <%= link_to "Create New Ticket", new_ticket_path(event_id: @event.id), class: "btn btn-success my-3" %>

  <hr>

  <h2>Available Tickets</h2>
  <% if @tickets.any? %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Ticket Number</th>
          <th>Category</th>
          <th>Price</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @tickets.each do |ticket| %>
          <tr>
            <td><%= ticket.ticket_number %></td>
            <td><%= ticket.ticket_category.titleize %></td>
            <td>$<%= ticket.price %></td>
            <td>
              <%= button_to "Buy Ticket", pending_ticket_path(ticket), method: :patch, class: "btn btn-primary" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>No tickets available for this event.</p>
  <% end %>
</div>