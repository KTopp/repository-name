<div class="d-flex justify-content-center ">
  <div class="card text-white rounded-15 shadow m-3 col-6">
    <%= cl_image_tag("xlqzpyq2nksppzfo2u4w") %>

  </div>
  <div class="card text-white bg-secondary rounded-5 shadow m-3">
    <div class="p-3">
      <h1 class="card-title">Tickets for <%= @event.name %></h1>
      <p class="card-text">Date: <%= @event.date.strftime("%B %d, %Y") %></p>
      <p class="card-text">Location: <%= @event.location %></p>
      <p class="card-text">Capacity: <%= @event.capacity %></p>
    </div>

  </div>
</div>


<div class="container mt-4">

  <hr>

  <h2>Available Tickets</h2>
  <%= link_to "Create New Ticket", new_ticket_path(event_id: @event.id), class: "btn btn-success my-3" %>
  <div class="container">
    <div class="row justify-content-between">
      <div class="col-6">
        <% if @tickets.any? %>
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Ticket Number</th>
                <th>Category</th>
                <th>Price</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @tickets.each do |ticket| %>
                <tr>
                  <td><%= ticket.ticket_number %></td>
                  <td><%= ticket.ticket_category.titleize %></td>
                  <td>$<%= ticket.price %></td>
                  <td>
                    <%= button_to "Add to cart", pending_ticket_path(ticket), method: :patch, class: "btn btn-primary" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <% else %>
          <p>No tickets available for this event.</p>
        <% end %>
      </div>
      <div class="col-6">
        <div class="ml-5 " style="width: 100%; height: 400px;"
          data-controller="map"
          data-map-markers-value="<%= @markers.to_json %>"
          data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      </div>
    </div>


  </div>
</div>
