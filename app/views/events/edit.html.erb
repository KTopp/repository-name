<div class="container mt-4 border shadow p-3">
  <h1>Update an event</h1>
  <%= simple_form_for @event, url: update_event_path(@event), data: { controller: "datepicker" }, method: :patch do |f| %>
    <!-- Event name -->
    <div class="mb-3">
        <%= f.input :name, class: "form-control" %>
    </div>

    <!-- Date -->
    <div class="mb-3">
        <%= f.input :date, as: :string, input_html: { data: { datepicker_target: "date" } }, class: "form-control" %>
    </div>

    <!-- Location -->
    <div class="mb-3">
        <%= f.input :location, class: "form-control" %>
    </div>

    <!-- Location -->
    <div class="mb-3">
        <%= f.input :capacity, class: "form-control" %>
    </div>

    <!-- Upload photos -->


    <!-- Submit Button -->
    <div class="mt-3 d-flex justify-content-center">
      <%= f.submit "Update Event", class: "btn btn-success" %>
    </div>
  <% end %>
</div>