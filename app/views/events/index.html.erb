<h1>All Events</h1>

<% @events.each do |event| %>
  <div class="card mb-3">
    <div class="card-body">
      <h5><%= event.name %></h5>
      <p>Date: <%= event.date.strftime("%B %d, %Y") %></p>
      <p>Location: <%= event.location %></p>
      <p>Capacity: <%= event.capacity %></p>
      <%= link_to "View Tickets", event_tickets_path(event), class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
