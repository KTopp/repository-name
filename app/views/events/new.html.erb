<div class="container mt-4 border shadow p-3">
  <h1>Create a new event</h1>
  <%= simple_form_for @event, data: { controller: "datepicker" } do |f| %>
    <!-- Event name -->
    <div class="mb-3">
        <%= f.input :name, class: "form-control", placeholder: "Enter the event's name" %>
    </div>

    <!-- Date -->
    <div class="mb-3">
        <%= f.input :date, as: :string, class: "form-control", placeholder: "Enter the event's date", input_html: { data: { datepicker_target: "date" } }%>
    </div>

    <!-- Location -->
    <div class="mb-3">
        <%= f.input :location, class: "form-control", placeholder: "Enter the event's location" %>
    </div>

    <!-- Location -->
    <div class="mb-3">
        <%= f.input :capacity, class: "form-control", placeholder: "Enter the event's total capacity" %>
    </div>

    <!-- Upload photos -->


    <!-- Submit Button -->
    <div class="mt-3 d-flex justify-content-center">
      <%= f.submit "Create Event", class: "btn btn-success" %>
    </div>
  <% end %>
</div>
